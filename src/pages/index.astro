---
import fs from 'fs';
import matter from 'gray-matter';

// Lire le contenu de la page d'accueil
const file = fs.readFileSync('./content/pages/accueil.md', 'utf-8');
const { data, content } = matter(file);
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>{data.title}</title>
  </head>
  <body>
    <main class="container">
      <h1>{data.title}</h1>
      <article>
        {content}
      </article>
    </main>
  </body>
</html>
