---
import '../styles/theme.css';
import ThemeSwitcher from '../components/ThemeSwitcher.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <ThemeSwitcher />
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 1rem;
    font-family: system-ui, sans-serif;
  }

  header {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  nav {
    max-width: 1200px;
    margin: 0 auto;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 0;
  }
</style> 